<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base1"
    android:fitsSystemWindows="true"
    tools:context=".profile_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/thin_block"
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="PROFILE"
            android:textColor="@color/black"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_blue"
            android:fontFamily="@font/crimson"
            android:hint="User Name"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"

            android:scrollHorizontally="true"
            android:textSize="20dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@color/dirtyyellow" />


        <EditText
            android:id="@+id/mobileTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_blue"
            android:fontFamily="@font/crimson"
            android:hint="Mobile Number"
            android:inputType="number"
            android:maxLines="1"

            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:scrollHorizontally="true"
            android:textSize="20dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@color/dirtyyellow" />


        <EditText
            android:id="@+id/emailTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_blue"
            android:fontFamily="@font/crimson"
            android:hint="Email "
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:scrollHorizontally="true"

            android:textSize="20dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@color/dirtyyellow" />


        <EditText
            android:id="@+id/passwordTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_blue"
            android:fontFamily="@font/crimson"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:scrollHorizontally="true"
            android:textSize="20dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@color/dirtyyellow" />


        <Button
            android:id="@+id/continueBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_pink_round"
            android:fontFamily="@font/crimson"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </LinearLayout>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/progressIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/grad1"
        android:visibility="gone" />
</RelativeLayout>

