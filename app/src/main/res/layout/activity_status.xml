<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base1"
    android:fitsSystemWindows="true"
    tools:context=".StatusActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thin_block"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Professional Details"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/studentBT"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_gray_round"
                android:fontFamily="@font/crimson"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Student"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/workingBT"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_gray_round"
                android:fontFamily="@font/crimson"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Working"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/studentLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTV">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/crimson"
                    android:paddingLeft="15dp"
                    android:text="Highest qualification"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/qualSP"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/qualIV" />

                <ImageView
                    android:id="@+id/qualIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/graduation" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/examRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTV"
                android:layout_marginTop="25dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/crimson"
                    android:paddingLeft="15dp"
                    android:text="Exam Board"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/examSP"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/examIV" />

                <ImageView
                    android:id="@+id/examIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/graduation" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTV"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/crimson"
                    android:paddingLeft="15dp"
                    android:text="Course"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/courseSP"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/courseIV" />

                <ImageView
                    android:id="@+id/courseIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/graduation" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTV"
                android:layout_marginTop="25dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/crimson"
                    android:paddingLeft="15dp"
                    android:text="Language Medium"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/langSP"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/langIV" />

                <ImageView
                    android:id="@+id/langIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/graduation" />
            </RelativeLayout>


            <EditText
                android:id="@+id/passingTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/crimson"
                android:hint="Year of passing"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="30dp"
                android:scrollHorizontally="true"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@color/dirtyyellow" />


            <EditText
                android:id="@+id/marksTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_blue"
                android:fontFamily="@font/crimson"
                android:hint="Marks scored in %"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="30dp"
                android:scrollHorizontally="true"
                android:textSize="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:background="@color/dirtyyellow" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/workingLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTV">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/crimson"
                    android:paddingLeft="25dp"
                    android:text="Highest qualification"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/qual2SP"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/qual2IV" />

                <ImageView
                    android:id="@+id/qual2IV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/graduation" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/crimson"
                android:paddingLeft="25dp"
                android:text="Currently Working:"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/yesBT"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_gray_round"
                    android:fontFamily="@font/crimson"
                    android:text="Yes"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/noBT"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/button_gray_round"
                    android:fontFamily="@font/crimson"
                    android:text="No"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/workingRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RG1"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/LL1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="25dp"
                        android:text="Duration:"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/fromTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="From"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/toTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Present"
                        android:textSize="20dp" />


                </LinearLayout>

                <EditText
                    android:id="@+id/jobtitleTV"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/LL1"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/button_blue"
                    android:fontFamily="@font/crimson"
                    android:hint="Enter your Job Title"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="25dp"
                    android:paddingRight="30dp"
                    android:scrollHorizontally="true"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/jobtitleTV"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/dirtyyellow" />

                <EditText
                    android:id="@+id/companyTV"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/view1"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/button_blue"
                    android:fontFamily="@font/crimson"
                    android:hint="Enter your Company Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="25dp"
                    android:paddingRight="30dp"
                    android:scrollHorizontally="true"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/companyTV"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/dirtyyellow" />


                <RelativeLayout
                    android:id="@+id/salaryRL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view2"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/crimson"
                        android:paddingLeft="25dp"
                        android:text="Salary"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/salarySP"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/SalaryIV"
                        android:nestedScrollingEnabled="true"
                        android:scrollbars="vertical" />

                    <ImageView
                        android:id="@+id/SalaryIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/graduation" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/salaryRL"
                    android:layout_marginTop="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/crimson"
                        android:paddingLeft="25dp"
                        android:text="Availability"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/availSP"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/availIV" />

                    <ImageView
                        android:id="@+id/availIV"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/graduation" />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/nextBT"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_pink_round"
            android:text="Continue"
            android:layout_marginBottom="300dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/progressIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/grad1"
        android:visibility="gone" />

</RelativeLayout>