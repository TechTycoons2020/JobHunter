<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base1"
    tools:context=".JobExpandActivity">

    <RelativeLayout
        android:id="@+id/layout1RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/thin_block"
            android:text="Job Details :"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/phoneIV"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"
        android:padding="12dp"
        android:background="@drawable/sharpy_box"
        android:backgroundTint="@color/matt_gray"
        android:src="@drawable/phone" />
    <ImageView
        android:id="@+id/gpsIV"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/sharpy_box"
        android:backgroundTint="@color/matt_gray"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:padding="12dp"
        android:src="@drawable/gps_single" />

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/layout1RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jobnameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/thin_block"
                android:text="Job Domain"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/companyTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/crimson"
                android:text="Company Name"
                android:textColor="@color/gray"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/locationTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/thin_block"
                android:text="Location"
                android:textColor="@color/shiny_blue"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/qualLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/crimson"
                    android:text="Qualifications :"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/qualTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="25/1/2020"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fieldLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/crimson"
                    android:text="Field :"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/fieldTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="25/1/2020"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/startLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/crimson"
                    android:text="Start Date :"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/startTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="25/1/2020"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/experLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/crimson"
                    android:text="Experience :"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/experTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="5 years"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/salaryLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/crimson"
                    android:text="Salary :"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/salaryTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="Rs.30,000"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/skillLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/crimson"
                    android:text="Skills :"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/skillsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="25/1/2020"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/durationLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/crimson"
                    android:text="Duration :"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/durationTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="25/1/2020"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stipendLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/crimson"
                    android:text="Stipend :"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/stipendTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="25/1/2020"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vacancyLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/crimson"
                    android:text="Vacancies :"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/vacancyTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="25/1/2020"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/agelimitLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/crimson"
                    android:text="Age Limit :"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/agelimitTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="25/1/2020"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/applybyLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/crimson"
                    android:text="Apply By :"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/applyTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="25/1/2020"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jobdescLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/thin_block"
                    android:text="Job Description"
                    android:textColor="@color/shiny_blue"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/jobdescTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="25/1/2020"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/compdescLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/thin_block"
                    android:text="Company Description"
                    android:textColor="@color/shiny_blue"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/comdescTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/crimson"
                    android:text="25/1/2020"
                    android:textColor="@color/gray_dark"
                    android:textSize="16dp" />
            </LinearLayout>

            <Button
                android:id="@+id/nextBT"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="300dp"
                android:background="@drawable/button_pink_round"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Apply"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>