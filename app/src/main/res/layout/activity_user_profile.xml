<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base1"
    android:fitsSystemWindows="true"
    tools:context=".profile_activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dpIV"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/simple_circle"
        android:padding="8dp"
        android:src="@drawable/graduation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thin_block"
            android:paddingLeft="25dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="User Profile"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/thin_block"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Username :"
                android:textAlignment="gravity"
                android:textColor="@color/dirtyyellow"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/usernameTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arima"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="30dp"
                android:text="Username :"
                android:textAlignment="gravity"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/thin_block"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Email :"
                android:textAlignment="gravity"
                android:textColor="@color/dirtyyellow"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arima"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="30dp"
                android:text="Username :"
                android:textAlignment="gravity"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/thin_block"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Contact :"
                android:textAlignment="gravity"
                android:textColor="@color/dirtyyellow"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contactTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arima"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="30dp"
                android:text="Username :"
                android:textAlignment="gravity"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/thin_block"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Qualification :"
                android:textAlignment="gravity"
                android:textColor="@color/dirtyyellow"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/qualTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arima"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="30dp"
                android:text="Username :"
                android:textAlignment="gravity"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/thin_block"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Course :"
                android:textAlignment="gravity"
                android:textColor="@color/dirtyyellow"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/courseTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arima"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="30dp"
                android:text="Username :"
                android:textAlignment="gravity"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/thin_block"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Language Medium :"
                android:textAlignment="gravity"
                android:textColor="@color/dirtyyellow"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/langTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arima"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="30dp"
                android:text="Username :"
                android:textAlignment="gravity"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/thin_block"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Percentage :"
                android:textAlignment="gravity"
                android:textColor="@color/dirtyyellow"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/percentTV"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/arima"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="30dp"
                android:text="Username :"
                android:textAlignment="gravity"
                android:textSize="14dp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

