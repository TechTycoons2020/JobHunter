<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base1"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".WorkerActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/thin_block"
        android:paddingLeft="25dp"
        android:paddingTop="40dp"
        android:paddingBottom="15dp"
        android:text="Experience details"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTV">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/crimson"
            android:paddingLeft="25dp"
            android:text="Highest qualification"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/qualSP"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/qualIV"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/qualIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/graduation" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/crimson"
        android:text="Currently Working:"
        android:paddingLeft="25dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yesBT"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_gray_round"
            android:fontFamily="@font/crimson"
            android:text="Yes"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/noBT"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_gray_round"
            android:fontFamily="@font/crimson"
            android:text="No"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/workingRL"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RG1">
        <LinearLayout
            android:id="@+id/LL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:text="Duration:"
                android:textSize="20dp" />
            
            <TextView
                android:id="@+id/fromTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="From"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/toTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Present"
                android:textSize="20dp" />


        </LinearLayout>
        
        <EditText
            android:id="@+id/jobtitleTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_blue"
            android:fontFamily="@font/crimson"
            android:hint="Enter your Job Title"
            android:inputType="text"
            android:maxLines="1"
            android:layout_below="@id/LL1"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:scrollHorizontally="true"
            android:textSize="20dp" />

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/jobtitleTV"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@color/dirtyyellow" />

        <EditText
            android:id="@+id/companyTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_blue"
            android:fontFamily="@font/crimson"
            android:hint="Enter your Company Name"
            android:inputType="text"
            android:maxLines="1"
            android:layout_below="@id/view1"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            android:scrollHorizontally="true"
            android:textSize="20dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/companyTV"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="@color/dirtyyellow" />


        <RelativeLayout
            android:id="@+id/salaryRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@id/view2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimson"
                android:paddingLeft="25dp"
                android:text="Salary"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/salarySP"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/SalaryIV"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/SalaryIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/graduation" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@id/salaryRL">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimson"
                android:paddingLeft="25dp"
                android:text="Availability"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/availSP"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/availIV"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/availIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/graduation" />
        </RelativeLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/nextBT"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_pink"
        android:text="NEXT"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"
        android:textSize="15dp"/>


</LinearLayout>