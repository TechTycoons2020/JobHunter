<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkerActivity">

    <TextView
        android:id="@+id/TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="60dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Experience details"
        android:textColor="@color/black"
        android:textSize="35dp" />

    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Highest qualification:"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:autofillHints="enter your quafs" />
    </LinearLayout>

    <TextView
        android:id="@+id/TV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L1"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:text="Current Working:"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/RG1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV1"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingLeft="11dp"
        android:paddingTop="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="55dp"
            android:text="Yes"
            android:textSize="20dp" />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="20dp" />

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RG1"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/L2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="Duration:"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:autofillHints="enter your quafs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="Present"
                android:textSize="20dp" />


        </LinearLayout>

        <EditText
            android:layout_width="350dp"
            android:id="@+id/ET1"
            android:layout_height="wrap_content"
            android:layout_below="@+id/L2"
            android:hint="enter your job title"
            android:layout_marginLeft="30dp"
            android:paddingTop="40dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="350dp"
            android:id="@+id/ET2"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ET1"
            android:hint="enter your company name"
            android:layout_marginLeft="30dp"
            android:paddingTop="40dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:id="@+id/L3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ET2"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="Salary:"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:autofillHints="enter your quafs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/L4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/L3"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="Availability to join:"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/s3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:autofillHints="enter your quafs" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RG1">

        <LinearLayout
            android:id="@+id/L5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="Duration:"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/s5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp" />

            <Spinner
                android:id="@+id/s7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp" />


        </LinearLayout>

        <EditText
            android:layout_width="350dp"
            android:id="@+id/ET5"
            android:layout_height="wrap_content"
            android:layout_below="@+id/L5"
            android:hint="enter your last  job title"
            android:layout_marginLeft="30dp"
            android:paddingTop="40dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="350dp"
            android:id="@+id/ET6"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ET5"
            android:hint="enter your last company name"
            android:layout_marginLeft="30dp"
            android:paddingTop="40dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:id="@+id/L6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ET6"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="Salary:"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/s6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:autofillHints="enter your quafs" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/L7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/L6"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:text="Availability to join:"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/s8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:autofillHints="enter your quafs" />
        </LinearLayout>


    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="550dp"
        android:layout_marginLeft="150dp"
        android:text="NEXT"
        android:background="@color/dull_blue"/>


</RelativeLayout>