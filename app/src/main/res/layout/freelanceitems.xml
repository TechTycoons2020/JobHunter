<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/box"
    android:orientation="vertical">

    <TextView
        android:id="@+id/freelancenameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/thin_block"
        android:text="Freelance Domain"
        android:textColor="@color/black"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/fieldTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/thin_block"
        android:text="Field"
        android:textColor="@color/shiny_blue"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/crimson"
            android:text="Apply within :"
            android:textColor="@color/gray_dark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/applyTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/crimson"
            android:text="5 years"
            android:textColor="@color/gray_dark"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/crimson"
            android:text="Salary :"
            android:textColor="@color/gray_dark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/salaryTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/crimson"
            android:text="Rs.30,000"
            android:textColor="@color/gray_dark"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/crimson"
            android:text="Skills :"
            android:textColor="@color/gray_dark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/skillsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/crimson"
            android:text="25/1/2020"
            android:textColor="@color/gray_dark"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>