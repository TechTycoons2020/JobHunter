<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/sharpy_box"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/searchRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <View
            android:id="@+id/clrback2"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/sharpy_box"
            android:backgroundTint="@color/matt_gray"
            android:layout_marginBottom="15dp"/>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:padding="4dp"
            android:tint="@color/gray_dark"
            app:srcCompat="@drawable/job" />


        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/thin_block"
            android:text="CATEGORY :"
            android:textColor="@color/gray_dark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/questionTV"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTV"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/arima"
            android:text="Choose The Category You Would Like To Explore."
            android:textColor="@color/gray"
            android:textSize="18dp" />


        <LinearLayout
            android:id="@+id/yesnoLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/questionTV"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/chooseTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/arima"
                android:text="Choose :"
                android:textColor="@color/shiny_blue"
                android:textSize="20dp" />


                <Button
                    android:id="@+id/jobsBT"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_pink_round"
                    android:text="Jobs / Internship"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/tenderBT"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_pink_round"
                    android:text="Tenders"
                    android:textColor="@color/white" />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>